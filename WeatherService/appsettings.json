{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": "mongodb://root:example@mongodb:27017"
  },
  "Database": {
    "Name": "WeatherServiceDb" // Name of the database to use
  },
  "ExternalApis": {
    "OpenMeteo": {
      "BaseUrl": "https://api.open-meteo.com/v1" // Base URL for the Open-Meteo API
    }
  },
  "Swagger": {
    "Title": "Weather Service API",
    "Version": "v1",
    "Description": "A REST API for weather data with MongoDB caching using Clean Architecture and CQRS",
    "Contact": {
      "Name": "Leonardo Prado",
      "Email": "pradoleong@gmail.com"
    },
    "Endpoint": "/swagger/v1/swagger.json",
    "RoutePrefix": "swagger"
  }
}